<p id="notice"><%= notice %></p>

<h1>Affiliates</h1>

<table>
  <thead>
    <tr>
      <th>Name </th>
      <th>Address </th>
      <th>Phone number </th>
      <th>Email </th>
      <th>Website </th>
      <th>Twitter </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @affiliates.each do |affiliate| %>
      <tr>
        <td><%= affiliate.name %></td>
        <td><%= affiliate.address %></td>
        <td><%= affiliate.phone_number %></td>
        <td><%= affiliate.email %></td>
        <td><%= affiliate.website %></td>
        <td><%= affiliate.twitter %></td>
        <td><%= link_to 'Show ', affiliate %> | </td>
        <td><%= link_to 'Edit ', edit_affiliate_path(affiliate) %> | </td>
        <td><%= link_to 'Destroy ', affiliate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Affiliate', new_affiliate_path %> |
